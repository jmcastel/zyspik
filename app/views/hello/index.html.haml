#hello
	

	.jumbotron.text-center.header


		
			
		.h1 Zyspik
		.h3 Help us to kill the mail !


	
	.col-md-6.col-md-offset-3

		= simple_form_for :earlyadopters  do |f|
		
			.row.col-md-6
				.form-group
					= f.input :name, input_html: { class: 'form-control',:maxlength => 40, :size => 40}
			.row.col-md-6
				.form-group
					= f.input :email, input_html: { class: 'form-control',:maxlength => 40, :size => 40}
					= f.button :submit, class: "btn btn-primary", data: { disable_with: "Please wait..." }
